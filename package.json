{
  "name": "@weglot/languages",
  "description": "Weglot Languages provides a set languages data and classes allowing you to easily use multiples flags as images",
  "main": "styles.scss",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "scripts": {
    "build": "./node_modules/.bin/node-sass --importer node_modules/node-sass-json-importer/dist/cli.js --recursive ./assets/scss/styles.scss --output ./dist --output-style compressed --source-map true && cp -a ./node_modules/flag-icon-css/flags/1x1/. ./images/flags/1x1/ && cp -a ./node_modules/flag-icon-css/flags/4x3/. ./images/flags/4x3/"
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:weglot/languages.git"
  },
  "homepage": "https://github.com/weglot/languages#readme",
  "dependencies": {
    "flag-icon-css": "^3.5.0"
  },
  "devDependencies": {
    "node-sass": "^5.0.0",
    "node-sass-json-importer": "^4.3.0"
  },
  "version": "1.0.0"
}
